{
  "name": "@etchteam/storybook-addon-a11y-interaction-tests",
  "version": "1.0.0",
  "description": "Storybook addon for accessibility interaction tests",
  "keywords": [
    "storybook-addons",
    "accessibility",
    "a11y",
    "storybook",
    "storybook-addon",
    "test",
    "interaction"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/etchteam/storybook-addon-a11y-interaction-tests"
  },
  "author": "Etch",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc -w",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "storybook": {
