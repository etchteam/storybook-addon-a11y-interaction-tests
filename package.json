    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "web-components"
    ]
  },
  "dependencies": {
    "focusable-selectors": "0.8.4",
    "postcss-selector-parser": "7.1.0",
    "shadow-dom-testing-library": "^1.0.0"
  },
  "devDependencies": {
    "@etchteam/eslint-config": "2.2.39",
    "@types/node": "^18.0.0",
    "eslint": "8.57.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}